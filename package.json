{
  "name": "mcp-integrated-search-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Google Custom Search and Redmine API integration",
  "type": "commonjs",
  "bin": {
    "mcp-integrated-search-server": "./build/index.js"
  },
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc && node build/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "npm run build && node test/test-server.mjs",
    "test:verify": "npm run build && node test/verify-mcp-server.mjs",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "google",
    "custom-search",
    "redmine",
    "search",
    "project-management"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "build"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "zod": "^3.25.49"
  }
}
